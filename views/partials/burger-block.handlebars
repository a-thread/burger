<li class="row">
	<div class="col-7">
		<p class="burger-name">{{burger_name}}</p>
	</div>
	<div class="col-5 button-row">
		<button type="button" class="btn btn-sm eat-burger" data-id="{{id}}" data-status="{{devoured}}">
			{{#if devoured}}Try Again!{{else}}Eat it!{{/if}}
		</button>
		<button type="button" class="btn btn-sm delete-burger" data-id="{{this.id}}">Delete</button>
	</div>
</li>
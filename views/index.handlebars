<header>
    <div class="title">
        <h1 class="title-text">Eat-Da-Burger</h1>
    </div>
</header>

<div class="burger-cards">

    <div class="card burger-board fresh shadow">
        <div class="card-body">
            <h3 class="board-title">Burgers to Eat</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
    </div>

    <div class="card form-card shadow">
        <form class="form-group create-form">
            <label for="forANewBurger">Add a Burger!</label>
            <input type="burger" class="form-control" id="burgerId" aria-describedby="AddABurger">
            <button type="submit" class="btn brgr-btn" value="0">Submit</button>
        </form>
    </div>

    <div class="card burger-board sampled shadow">
        <div class="card-body">
            <h3 class="board-title">Already Sampled</h3>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block devoured=true}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>